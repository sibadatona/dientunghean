				<div class="clear"></div>
            </div>
            <div class="header_top">
                <div class="logo">
                    <a href="/"><img src="/Assets/client/images/logoGH.jpg" alt="logo" /></a>
                </div>
                @{Html.RenderAction("HeaderCart", "Home");}
                <script type="text/javascript">
                    function DropDown(el) {
                        this.dd = el;
                        this.initEvents();
                    }
                    DropDown.prototype = {
                        initEvents: function () {
                            var obj = this;

                            obj.dd.on('click', function (event) {
                                $(this).toggleClass('active');
                                event.stopPropagation();
                            });
                        }
                    }

                    $(function () {

                        var dd = new DropDown($('#dd'));

                        $(document).click(function () {
                            // all dropdowns
                            $('.wrapper-dropdown-2').removeClass('active');
                        });

                    });

                </script>
                <div class="clear"></div>
            </div>
			<div class="header_bottom" style="height: 48px;">
				@*@{Html.RenderAction("MainMenu", "Home");}*@
				<div class=" menu">
					<ul>
						<li class="active"><a href="/">Trang Chủ</a></li>
						<li><a href="/san-pham">Sản Phẩm</a></li>
						<li><a href="/gioi-thieu">Giới Thiệu</a></li>
						<li><a href="/lien-he">Liên Hệ</a></li>
						<div class="clear"></div>
					</ul>
				</div>
				<div class="search_box">
					<form action="/tim-kiem-chung">
						<input type="text" id="txtKeyWord" name="keyword" placeholder="Search"><input type="submit" value="">
					</form>
				</div>
				<div class="clear"></div>
			</div>
            @RenderSection("slide",required:false)
        </div>
        <div class="main">
            @RenderBody()
        </div>
    </div>
    <div class="footer">
       @*@{Html.RenderAction("Footer", "Home");}*@
		<div class="wrap">
			<div class="section group">
				<div class="col_1_of_4 span_1_of_4">
					<h4>Information</h4>
