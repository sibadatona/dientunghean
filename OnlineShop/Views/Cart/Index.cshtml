@model List<Entity.View.CartItem>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section jsFooter
{
    <script src="/Assets/client/js/controller/CartController.js"></script>
}
<div class="section group">
    @if (Model.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <td>Mã sản phẩm</td>
                    <td>Tên sản phẩm</td>
                    <td>Ảnh</td>
                    <td>Số lượng</td>
                    <td>Đơn giá</td>
                    <td>Thành tiền</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Product.ID</td>
                        <td>@item.Product.Name</td>
                        <td><img src="@item.Product.Image" width="100" /></td>
                        <td><input type="text" id="txtsl" class="txtQuantity" data-id="@item.Product.ID" value="@item.Quantity" /></td>
                        <td>@item.Product.Price.GetValueOrDefault(0)</td>
                        <td>@(item.Product.Price.GetValueOrDefault(0) * item.Quantity)</td>
                        <td><a href="#" data-id="@item.Product.ID" class="btn-delete">Xóa</a></td>
                    </tr>
                }

            </tbody>
        </table>
        <button id="btnContinue" class="btn">Tiếp tục mua hàng</button>
        <button id="btnUpdate" class="btn">Cập nhật</button>
        <button id="btnDelAll" class="btn">Xóa giỏ hàng</button>
        <button id="btnPayment" class="btn">Thanh toán</button>
    }
    else
    {
        <span class="alert alert-danger">Không có sản phẩm nào trong giỏ hàng!</span>
    }

</div>
