
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@section header{
    Danh sách người dùng
}

@section jsfooter{
    <script src="~/Assets/admin/js/mustache.min.js"></script>
    <script src="~/Assets/admin/js/jquery.twbsPagination.min.js"></script>
    <script src="~/Assets/admin/js/ProductController.js"></script>
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">

            <div class="panel-heading">
                Danh sách người dùng
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="col-md-12">
                    <div class="col-md-10">
                        <div class="row form-group">
                            <div class="col-lg-12">
                                <div class="col-md-4">
                                    <input type="text" id="txtSearchName" value="" name="searchString" class="form-control">
                                </div>
                                <div class="col-md-4">
                                    <select id="ddlStatus" class="form-control">
                                        <option value="">All</option>
                                        <option value="true">Active</option>
                                        <option value="false">Lock</option>
                                    </select>
                                </div>
                                <div class="col-md-4">
                                    <button type="submit" class="btn btn-success" id="btnSearch">Tìm kiếm</button>
                                    <button type="submit" class="btn btn-default" id="btnRest">Reset</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <a href="/Admin/Product/Create" class="btn btn-primary">Thêm mới</a>
                    </div>
                </div>

                <div class="col-md-12">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tên sản phẩm</th>
                                <th>Giá</th>
                                <th>Danh mục</th>
                                <th>Hình Ảnh</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody id="tblData"></tbody>
                    </table>
                    <div id="pagination-demo" class="pagination-sm"></div>
                    <script id="template" type="x-tmpl-mustache">
                        <tr>
                            <td>{{Id}}</td>
                            <td>{{Name}}</td>
                            <td>{{Price}}</td>
                            <td>{{CategoryName}}</td>
                            <td>{{{Image}}}</td>
                            <td>
                                <a class="btn btn-success" href="/Admin/Product/Update/{{Id}}">Cập nhật</a>
                                <input type="button" class="btn btn-danger btnDelete" data-id="{{Id}}" value="Delete" />
                            </td>
                        </tr>
                    </script>
                </div>
                <!-- /.table-responsive -->
            </div>
        </div>
    </div>
</div>